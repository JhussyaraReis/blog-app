{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
  <div class="card-body">
    <h2>Adicionar Postagem</h2>
    <form action="/admin/postagens/nova" method="POST">
      <label for="titulo">Título</label>
      <input type="text" class="form-control" name="titulo" id="titulo" />
      <label for="slug"> Slug</label>
      <input type="text" name="slug" id="slug" class="form-control" />
      <label for="descricao">Descrição</label>
      <input type="text" name="descricao" id="descricao" class="form-control" />
      <label for="conteudo">Conteúdo</label>
      <textarea
        name="conteudo"
        id="conteuso"
        cols="30"
        rows="10"
        class="form-control"
      ></textarea>
      <label for="categoria">Categoria</label>
      <select name="categoria" id="categoria" class="form-select">
        {{#each categoria}}
          <option value="{{_id}}">{{nome}}</option>
        {{else}}
          <option value="0">Nenhuma categoria cadastrada</option>
        {{/each}}
      </select>
      <div class="col-lg-12 mt-4" style="text-align: right;">
        <button type="submit" class="btn btn-success">Criar Postagem</button>
      </div>
    </form>
  </div>
</div>