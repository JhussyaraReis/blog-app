{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card mb-3" style="max-width: 40%; margin:auto">
  <div class="card-body">
    <h5 class="card-title">Registrar-se</h5>
    <form action="" method="post">
      <Label for="nome">Nome:</Label>
      <input
        type="text"
        name="nome"
        id="nome"
        placeholder="Insira o nome"
        class="form-control"
        required
      />
      <Label for="email">E-mail:</Label>
      <input
        type="email"
        name="email"
        id="email"
        placeholder="Insira o e-mail"
        class="form-control"
        required
      />
      <Label for="senha">Senha:</Label>
      <input
        type="password"
        name="senha"
        id="senha"
        placeholder="**************"
        class="form-control"
        required
      />
      <Label for="senha2">Confirmar senha:</Label>
      <input
        type="password"
        name="senha2"
        id="senha2"
        placeholder="**************"
        class="form-control"
        required
      />
      <div style="display: flex; justify-content:flex-end">
        <button type="submit" class="btn btn-success mt-4">Criar Conta</button>
      </div>
    </form>
  </div>
</div>